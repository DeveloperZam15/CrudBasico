@model IEnumerable<CrudBasico.Models.Hardware>

@{
    ViewBag.Title = "Index";
}

<h2 class="pt-3 pb-3">Invetario de hardware de préstamo</h2>

<p>
    @Html.ActionLink("Insertar nuevo registro", "Create", "", new {@class="btn btn-success"})
</p>

<table class="table table-bordered text-center">

    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.HardId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HardNombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HardStock)
        </th>
        <th>ACCIONES</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HardId)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.HardNombre)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.HardStock)
        </td>

        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.HardId} , new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.HardId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Eliminar", "Delete", new {  id=item.HardId}, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
